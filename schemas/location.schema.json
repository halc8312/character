{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/halc8312/character/schemas/location.schema.json",
  "title": "Location Schema",
  "description": "Schema for location definition files",
  "type": "object",
  "required": [
    "version",
    "id",
    "profile",
    "tags",
    "meta"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "id": {
      "type": "string",
      "description": "Unique location identifier (must match filename)",
      "pattern": "^[a-z0-9_]+$"
    },
    "profile": {
      "type": "object",
      "description": "Basic location profile",
      "required": ["name", "type"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name of the location"
        },
        "short": {
          "type": "string",
          "description": "Short name or abbreviation"
        },
        "aliases": {
          "type": "array",
          "description": "Alternative names (old names, abbreviations, translations)",
          "items": {
            "type": "string"
          }
        },
        "type": {
          "type": "string",
          "description": "Type of location (must be in vocab.yml location_types)"
        },
        "parent_id": {
          "type": "string",
          "description": "ID of parent location (for hierarchy)",
          "pattern": "^[a-z0-9_]+$"
        },
        "description": {
          "type": "string",
          "description": "Description of the location"
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Classification tags in prefix/value format",
      "items": {
        "type": "string",
        "pattern": "^[a-z]+\\/[a-z0-9_\\-]+$"
      }
    },
    "lore": {
      "type": "object",
      "description": "World-building details",
      "additionalProperties": false,
      "properties": {
        "history": {
          "type": "string",
          "description": "Historical background"
        },
        "rumors": {
          "type": "array",
          "description": "Rumors or legends about this place",
          "items": {
            "type": "string"
          }
        },
        "rules": {
          "type": "array",
          "description": "Rules or customs specific to this place",
          "items": {
            "type": "string"
          }
        },
        "notable_features": {
          "type": "array",
          "description": "Notable features or landmarks within",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "description": "Metadata",
      "required": ["created", "updated", "author"],
      "additionalProperties": false,
      "properties": {
        "created": {
          "type": "string",
          "description": "Creation date (YYYY-MM-DD)",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "updated": {
          "type": "string",
          "description": "Last update date (YYYY-MM-DD)",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "author": {
          "type": "string",
          "description": "Author or contributor"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes"
        }
      }
    }
  }
}
